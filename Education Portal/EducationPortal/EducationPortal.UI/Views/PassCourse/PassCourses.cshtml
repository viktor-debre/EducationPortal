@model IEnumerable<CourseView>
@{

}

<h3>Course list</h3>
@foreach (var item in Model)
{
    <div>
        <div>
            <p>#@item.Id Name: @item.Name</p>
            <p>@item.Description</p>
        </div>
        <div>
            Materials:
            @foreach (var material in item.Materials)
            {
                <p>@material.Name</p>
                <form asp-controller="PassCourse" asp-action="PassMaterial" asp-route-name="@material.Name" asp-route-id="@item.Id">
                    <input type="submit" value="Pass material" />
                </form>
            }
            <br/>
        </div>
        <div>
            Skills
            @foreach (var skill in item.Skills)
            {
                <p>@skill.Title</p>
            }
        </div>
        <form asp-controller="PassCourse" asp-action="StartPassCourse" asp-route-id="@item.Id">
            <input type="submit" value="Passing course" />
        </form>
    </div>
}