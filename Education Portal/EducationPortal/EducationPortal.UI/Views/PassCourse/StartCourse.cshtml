@model IEnumerable<CourseView>

<h3>Course list</h3>

<table class="table">
    <tr><th>#</th><th>Name</th><th>Materials</th><th>Skills</th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                @foreach (var material in item.Materials)
                {
                    <p>@material.Name</p>
                }
            </td>
            <td>
                @foreach (var skill in item.Skills)
                {
                    <p>@skill.Title</p>
                }
            </td>
            <td>
                <form asp-controller="PassCourse" asp-action="TakeCourse" method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Take course" />
                </form>
            </td>
        </tr>
    }
</table>