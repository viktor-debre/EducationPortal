@model IEnumerable<CourseView>

 <h3>Course list</h3>

<table class="table">
    <tr><th>#</th><th>Name</th><th>Description</th><th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-controller="EditingCourses" asp-action="Edit" asp-route-id="@item.Id">Change</a>  |
                <a asp-controller="EditingCourses" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
            <td>
                <form asp-controller="EditingCourses" asp-action="Delete" asp-route-id="@item.Id">
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
    }
</table>
<p><a asp-controller="EditingCourses" asp-action="Create">+ Add course</a></p>