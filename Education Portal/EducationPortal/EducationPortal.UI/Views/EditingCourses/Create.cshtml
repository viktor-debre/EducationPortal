@model EducationPortal.UI.Models.ViewEntities.CourseView
@{
    var materials = ViewBag.Materials;
}

<h2>Adding course</h2>
<form asp-action="Create" asp-controller="EditingCourses">
    <p>
        <label asp-for="Name">Name</label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"/>
    </p>
    <p>
        <label asp-for="Description">Description</label><br />
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description" />
    </p>
    <select asp-for="Materials" asp-items="@materials" multiple></select>
    <p>
        <input type="submit" value="Submit"/>
    </p>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}